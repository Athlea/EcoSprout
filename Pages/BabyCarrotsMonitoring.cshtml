@page "/monitoring/baby-carrots"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EcoSprout.Pages.BabyCarrotsMonitoringModel
@{
    Layout = null;
    ViewData["Title"] = "Baby Carrots Monitoring";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Baby Carrots Monitoring - EcoSprout</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Poppins:wght@500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/landing.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/monitoring.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/babycarrots.css" asp-append-version="true" />
    <script type="module" src="/js/firebase.js"></script>
    <script type="module" src="/js/monitoring.js"></script>
    <script type="module" src="/js/login.js"></script>
</head>
<body>
    @await Html.PartialAsync("_NavbarPartial")

    <main class="plant-monitoring-main">
        
        <div class="plant-header">
            <div class="plant-image-large">
                <img src="/images/carrot-sow-and-grow.jpg" alt="Baby Carrots">
            </div>
            <div class="plant-title">
                <h1>Baby Carrots</h1>
                <p class="plant-description">
                    Baby carrots are sweet, crunchy root vegetables that are perfect for small gardens.
                    They require consistent moisture and moderate temperatures for optimal growth.
                </p>
            </div>
        </div>
        
        <div class="monitoring-container">
            <div class="monitoring-data">
                <div class="data-card">
                    <h3>Temperature</h3>
                    <div class="data-value">29.25Â°C</div>
                    <div class="data-status optimal">Optimal</div>
                </div>
                
                <div class="data-card">
                    <h3>Soil Moisture</h3>
                    <div class="data-value">365%</div>
                    <div class="data-status optimal">Not Optimal</div>
                </div>
            </div>
            
            <div class="watering-section">
                <h2>Watering Control</h2>
                <div class="watering-controls">
                    <div class="auto-toggle">
                        <label class="switch-label">Auto Water Control</label>
                        <label class="switch">
                            <input type="checkbox" id="autoWaterToggle" checked>
                            <span class="slider round"></span>
                        </label>
                    </div>
                    
                    <div class="manual-controls" id="manualControls">
                        <div class="control-group">
                            <label for="waterDate">Set Date:</label>
                            <input type="date" id="waterDate" disabled>
                        </div>
                        
                        <div class="control-group">
                            <label for="waterTime">Set Time:</label>
                            <input type="time" id="waterTime" disabled>
                        </div>
                        
                        <div class="control-group">
                            <label for="waterDuration">Set Duration (mins):</label>
                            <input type="number" id="waterDuration" min="1" step="1" placeholder="Enter duration" disabled>
                        </div>
                        
                        <button class="water-now-button" disabled>Water Now</button>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="history-section">
            <h2>Watering History</h2>
            <table class="history-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Duration</th>
                        <th>Mode</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>12/30/23</td>
                        <td>4:59 AM</td>
                        <td>10 mins</td>
                        <td>Automatic</td>
                    </tr>
                    <tr>
                        <td>12/29/23</td>
                        <td>5:30 PM</td>
                        <td>8 mins</td>
                        <td>Automatic</td>
                    </tr>
                    <tr>
                        <td>12/29/23</td>
                        <td>6:15 AM</td>
                        <td>10 mins</td>
                        <td>Automatic</td> 
                    </tr>
                </tbody>
            </table>
        </div>
    </main>

    <footer>
        <p>&copy; 2024 EcoSprout - Smart Irrigation System</p>
    </footer>
</body>
</html>
